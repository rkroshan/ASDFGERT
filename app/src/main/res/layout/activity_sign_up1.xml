<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/next_bg"
    android:paddingBottom="40dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:id="@+id/linearLayout"

            android:layout_centerHorizontal="true">



            <EditText
                android:id="@+id/signup1_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_bg"
                android:gravity="center"
                android:hint="NAME"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/white"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColorHint="@color/light_white"
                android:textSize="20sp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/rb_group"
                android:layout_gravity="center">

                <RadioButton
                    android:id="@+id/rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"
                    android:layout_marginRight="10dp"
                    android:textSize="20sp"
                    />

                <RadioButton
                    android:id="@+id/rb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Female"
                    android:buttonTint="@color/white"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="10sp"
                android:visibility="gone"
                android:id="@+id/gender_error"/>

            <Spinner
                android:id="@+id/signup1_clg_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                >

            </Spinner>


            <EditText
                android:id="@+id/signup1_college"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="COLLEGE"
                android:textColor="@color/white"
                android:textColorHint="@color/light_white"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:maxLines="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/edittext_bg"
                android:visibility="gone"
                />



            <EditText
                android:id="@+id/signup1_roll"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:hint="ROLL NO"
                android:textColor="@color/white"
                android:textColorHint="@color/light_white"
                android:gravity="center"
                android:textSize="20sp"
                android:paddingTop="5dp"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:background="@drawable/edittext_bg"
                />



            <EditText
                android:id="@+id/signup1_branch"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:hint="BRANCH"
                android:textColor="@color/white"
                android:textColorHint="@color/light_white"
                android:gravity="center"
                android:textSize="20sp"
                android:inputType="text"
                android:maxLines="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/edittext_bg"
                />



            <EditText
                android:id="@+id/signup1_year"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:hint="ACADEMIC YEAR"
                android:textColor="@color/white"
                android:textColorHint="@color/light_white"
                android:gravity="center"
                android:textSize="20sp"
                android:inputType="number"
                android:maxLines="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/edittext_bg"
                />



            <EditText
                android:id="@+id/signup1_mobile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:hint="MOBILE"
                android:textColor="@color/white"
                android:textColorHint="@color/light_white"
                android:gravity="center"
                android:textSize="20sp"
                android:paddingTop="5dp"
                android:inputType="number"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_bg"
                />


            <Button
                android:id="@+id/signup1_btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTER"
                android:textColor="@color/but_text"
                android:textSize="20sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/button_bg1"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"/>

        </LinearLayout>

</LinearLayout>