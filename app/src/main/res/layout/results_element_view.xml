<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#65ffffff"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/results_event_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="FUN EVENTS - "
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceMedium"/>
        <TextView
            android:id="@+id/results_event_name"
            android:layout_width="wrap_content"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:text="INFERNO"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceMedium"/>

    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="4dp"
    android:background="#00ff00"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#55000000"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/results_event_result"
            android:padding="12dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1st Position : Shivam Kumar\n1st Position : Shivam Kumar\n1st Position : Shivam Kumar"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceSmall"/>

    </LinearLayout>

</LinearLayout>