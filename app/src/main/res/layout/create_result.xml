<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/results_lower"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.rajatv.surajv.roshank.sac.Results.Results">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_results"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@mipmap/results_upper"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <View
            android:id="@+id/results_back"
            android:layout_width="40dp"
            android:foregroundGravity="left"
            android:layout_height="40dp" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/event_type"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>
        <Spinner
            android:id="@+id/main_event_type"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>
        <Spinner
            android:id="@+id/subevent_event_type"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/position"
            android:layout_width="32dp"
            android:hint="1"
            android:gravity="center"
            android:inputType="number"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/position_holder_name"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:hint="Position Holder Name"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/add_more"
            android:background="@drawable/like"
            android:layout_width="44dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:id="@+id/added_positions_show"
        android:gravity="center_horizontal"
        android:scrollbars="vertical|horizontal"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/publish_result"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:text="PUBLISH RESULT"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_height="wrap_content" />

</LinearLayout>