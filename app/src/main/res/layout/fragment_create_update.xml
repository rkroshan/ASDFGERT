<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.creator.innov.techfest.tabbedView.update.CreateUpdate">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Update"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceLarge"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_btn_bg"
        android:hint="Heading..."
        android:inputType="text"
        android:maxLines="1"
        android:layout_marginBottom="30dp"
        android:padding="15dp"/>

    <EditText
        android:id="@+id/news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_btn_bg"
        android:inputType="textMultiLine"
        android:hint="News..."
        android:padding="15dp"
        android:layout_marginBottom="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Files"
        android:layout_weight="1"
        android:layout_gravity="center"

        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceMedium"
        android:padding="8dp"/>

    <ImageView
        android:id="@+id/upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_file_upload_black_24dp"
        android:layout_gravity="center_horizontal"
        android:background="#fff"/>
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/upload_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="top">
    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notify"
        android:textColor="#fff"
        android:background="@drawable/submit_post_btn"/>

</LinearLayout>
